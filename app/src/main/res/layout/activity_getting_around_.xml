<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.andrew.opendayapp.Getting_Around_Activity"
        android:weightSum="1">

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/mapImageButton"
            android:contentDescription="@string/disclaimersbutton"
            android:background="@drawable/mapbutton"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/carImageButton"
            android:contentDescription="@string/disclaimersbutton"
            android:background="@drawable/arrivebycar"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_below="@id/mapImageButton"
            />

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/trainImageButton"
            android:contentDescription="@string/disclaimersbutton"
            android:background="@drawable/trainbutton"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_below="@id/carImageButton"
            />

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/busImageButton"
            android:contentDescription="@string/disclaimersbutton"
            android:background="@drawable/arrivingbus"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_below="@id/trainImageButton"
            />




        </RelativeLayout>


    </ScrollView>
