<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.opendayapp.PlannerActivity"
    android:weightSum="1"
    android:orientation="vertical">



    <EditText
        android:id="@+id/plannertextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="false"
        android:gravity="top"
        android:lines="50"
        android:layout_weight="1.5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/savebutton"
        android:id="@+id/savebutton"
        android:layout_below="@id/plannertextbox"
        android:layout_gravity="bottom"
        android:onClick="clickedSave"
        android:textColor="#56318e"
        android:textSize="20sp"
        android:background="@layout/buttonshape"
        android:paddingTop="5dp"

        />

</LinearLayout>
