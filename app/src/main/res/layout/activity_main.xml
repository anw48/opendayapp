<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >


    <RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.andrew.opendayapp.MainActivity"
        android:weightSum="1"
        android:orientation="vertical">


    <ImageButton
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/welcomeimageButton"
        android:contentDescription="@string/welcomebutton"
        android:background="@drawable/welcome"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/talksimageButton"
        android:contentDescription="@string/talksbutton"
        android:background="@drawable/department"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/welcomeimageButton"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/refreshementsimageButton"
        android:contentDescription="@string/refreshementsbutton"
        android:background="@drawable/refreshments"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/talksimageButton"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/toursimageButton"
        android:contentDescription="@string/toursbutton"
        android:background="@drawable/tours"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/refreshementsimageButton"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/gettingaroundimageButton"
        android:contentDescription="@string/gettingaroundbutton"
        android:background="@drawable/gettingaround"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/toursimageButton"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/plannerimageButton"
        android:contentDescription="@string/plannerbutton"
        android:background="@drawable/planner"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/gettingaroundimageButton"

        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/contactimageButton"
        android:contentDescription="@string/contactbutton"
        android:background="@drawable/contact"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/plannerimageButton"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/disclaimersimageButton"
        android:contentDescription="@string/disclaimersbutton"
        android:background="@drawable/safety"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/contactimageButton"
        />

</RelativeLayout>
</ScrollView>