<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.opendayapp.Student_Experience_Activity">

<TextView
    android:id="@+id/studentexperienceheader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/studentexperiencedescription"
    android:textIsSelectable="false"
    android:textSize="15sp" />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/refreshementsimageButton"
        android:background="@drawable/refreshments"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/accommodationbutton"
        android:background="@drawable/accommodation"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />
</LinearLayout>
